/* pages/me/index.wxss */
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding:20px;
    margin-bottom:10px;
    
}
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
.nickname {
    color:#333;
    font-size:24rpx;
}
.card {
    margin: 10rpx 0;
    padding:15rpx;
}
.card .title {
    padding:15rpx 0;
    margin-bottom:15rpx;
    display:inline-block;
}
.order-btns{
    display: flex;
    justify-content: space-around;
}
.order-btn {
    display:flex;
    flex-direction:column;
    align-content: center;    
}
.order-icon{
    font-size:80rpx;
    text-align: center;
}