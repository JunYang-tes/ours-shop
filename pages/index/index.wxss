/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  font-size:28rpx;
  margin:10px 0;
}
.items {
  padding:5px;
  width:100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item {
  margin:6px;
  width:46%;
  height:180px;
  box-shadow:0px 0px 6px gray;
  overflow:hidden;
  display: flex;
  flex-direction:column;
  justify-content:space-between;
  position:relative;
}
.add-to-cart {
  position:absolute;
  right:5rpx;
  bottom:5rpx;
  display:block;
  width:60rpx;
  height:60rpx;
  font-size:50rpx;
  margin-right:0;
  color:orange;
  transition: opacity 0.5;
}
.add-to-cart:active{
  opacity: 0.5
}

.item-name {
  text-overflow: ellipsis;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
}
.item image {
  background-size: cover;
  max-width: 100%;
  max-height: 70%;
}

.title-row{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding:8rpx;
}
.price-row{
  display: flex;
  color:orange;
  font-style: italic;
}
.price-row .icon {
  position:relative;
  top:5rpx;
}
.item-price {
  font-size:36rpx;
  margin-right: 6rpx;
}