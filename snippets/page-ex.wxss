.page-ex-toast{
  background: rgba(0, 0, 0, 0.45);
  color:white;
  padding:10rpx;
  border-radius: 10rpx;
  max-width: 80%;
  position:fixed;
  bottom:10px;
  left:50%;
  transform:translate(-50%);
  pointer-events: none;
  transition:opacity 0.5s;
  opacity: 1;
  z-index: 100000;
}
.page-ex-toast-easeout{
  opacity: 0;
}
.page-ex-loading {
  width: 50px;
  height: 50px;
  background: rgba(0, 0, 0, 0.45);
  border-radius: 6px; 
  display: flex;
  justify-content: center;
  flex-direction: column;
  position: fixed;
  z-index: 100000;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.page-ex-loading text {
  font-size:38px;
  margin:0 auto;
  width:38px;
  height:38px;
  color: white;
}